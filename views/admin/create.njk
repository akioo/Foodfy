{% extends "layoutAdmin.njk" %}

{% block head %}
    <title>Criacao de receita</title>
{% endblock %}

{% block content %}

<form method="POST" action="/admin/recipes" id="create_recipe" >

    <div class="form_header">   
        <h2>Criando Receitas</h2> 
        <div>
            <button type="submit">Salvar Receita</button>
        </div>
    </div>


    <div class="item">
        <div>Imagem da Receita</div>
        <div> 
            <input 
                type="url"
                name="recipe_url"
             >
        </div>
    </div>


        <div class="item">
            <div>Ingredientes</div>
            <div> 
                <input 
                    type="txt"
                    name="ingredients"
             >
            </div>
            <a href="">Adiciornar novo incrediente</a>
        </div>

        <div class="item">
            <div>Modo de Preparo</div>
                <div> 
                    <input 
                        type="txt"
                        name="preparation"
                    >
                </div>
            <a href="">Adiciornar novo passo</a>
        </div>

        <div class="item">
            <div>Informacoes Adicionais</div>
            <div> 
                <textarea name="create_recipe" cols="" rows="10"></textarea>
            </div>
        </div>

</form>



{% endblock %}


