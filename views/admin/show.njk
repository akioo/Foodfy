{% extends "layoutAdmin.njk" %}

{% block content %}
    <h3>Detalhe da Receitas</h3>

<section class="recipes">
                <div class="recipe-image">
                        <img src="{{recipe.image}}" alt="{{recipe.title}}">
                </div>
                <div class="recipe-title">
                        <h2>{{recipe.title}}</h2>
                </div>
                <div class="recipe-author">
                        <p>Por {{recipe.author}}</p>
                </div>

                <div class="recipes">
                        <h2>Ingredientes </h2> 
                        <ul class="lista recipe-info">
                         {% for ingredient in recipe.ingredients %}
                            <li>{{ingredient}}</li>
                         {% endfor %}
                        </ul>
                        
                </div>

                

                <div class="recipes">
                  <h2>Modo de Preparo</h2>
                  <p class='recipe-info'>{{recipe.preparation}}</p>
                </div>



                <div class="recipes">
                  <h2>Informacoes Adicionais</h2>
                  <p class='recipe-info' >{{recipe.information}}</p>
                </div>

        </section>


{% endblock %}


